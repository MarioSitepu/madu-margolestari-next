# MongoDB Connection URI
# Format: mongodb://[username:password@]host[:port][/database][?options]
# Contoh untuk MongoDB lokal:
# MONGODB_URI=mongodb://localhost:27017/madu_db

# Contoh untuk MongoDB Atlas (cloud):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database_name?retryWrites=true&w=majority

# ⚠️ PRODUCTION DATABASE (menggunakan test database di Atlas):
MONGODB_URI=mongodb+srv://MaduMarles:MaduGasMarles67@cluster0.ofbekbi.mongodb.net/test?retryWrites=true&w=majority

# Server Port
PORT=5000

# Google OAuth Configuration - HARUS sama dengan VITE_GOOGLE_CLIENT_ID di frontend
GOOGLE_CLIENT_ID=your_google_client_id_here

# JWT Secret - Gunakan string panjang dan random
JWT_SECRET=your_jwt_secret_key_here

# Admin Emails - Akun dengan email ini akan mendapat role admin (comma-separated)
ADMIN_EMAILS=admin@marles.com,admin@madumargolestari.com

# Email Configuration (Optional - untuk mengirim email)
# EMAIL_SERVICE=ethereal  # atau gmail
# EMAIL_USER=your_email@gmail.com
# EMAIL_PASSWORD=your_app_password

# Supabase Configuration (Optional - untuk upload file)
# SUPABASE_URL=your_supabase_url
# SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Frontend URL (untuk CORS dan email links)
FRONTEND_URL=http://localhost:5173

# Node Environment
NODE_ENV=development
